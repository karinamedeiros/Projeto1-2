<h1> Editar </h1>

<%= form_for(resource, :as => resource_name, :url => edit_user_registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="field">
    <%= f.label :Nome %><br>
    <%= f.text_field :name , :autofocus => true %>
  </div>

  <div class="field">
    <%= f.label :CPF %><br>
    <%= f.text_field :cpf %>
  </div>

  <div class="field">
    <%= f.label :Telefone %><br>
    <%= f.text_field :phoneHome %>
  </div>

  <div class="field">
    <%= f.label :Celular %><br>
    <%= f.text_field :phoneMobile %>
  </div>

 <div class="field">
    <%= f.label :Endereço %><br>
    <%= f.text_field :address %>
  </div>


  <div><%= f.label :Email %><br />
    <%= f.email_field :email %> 
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.label :Senha %> <i>(Deixe em branco se não deseja alterar)</i><br />
  <%= f.password_field :password, :autocomplete => "off" %></div>

  <div><%= f.label :Confirmação %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :Senha %> <i>(Digite sua senha atual para confirmar as alterações)</i><br />
  <%= f.password_field :current_password %></div>

  <div><%= f.submit "Atualizar" %></div>
<% end %>

<%= link_to "Voltar", :back %>
