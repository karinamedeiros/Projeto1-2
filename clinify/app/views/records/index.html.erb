<h1>Fichas cadastrais</h1>

<table>
  <thead>
    <tr>
      <th>Patiente</th>
      <th>Sintomas</th>
      <th>Exames</th>
      <th>Pressão arterial</th>
      <th>Batimentos cardíacos</th>
      <th>Histórico pessoal</th>
      <th>Observações</th> 
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.user_id %></td>
        <td><%= record.symptom %></td>
        <td><%= record.exams %></td>
        <td><%= record.bloodPress %></td>
        <td><%= record.heartBeat %></td>
        <td><%= record.history %></td>
        <td><%= record.observation %></td> 
        <td><%= link_to 'Mostrar', record %></td>
        <td><%= link_to 'Editar', edit_record_path(record) %></td>
        <td><%= link_to 'Excluir', record, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

